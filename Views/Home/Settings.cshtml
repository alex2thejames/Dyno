@using Dyno.Models
@model UpdateUser
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .whiteBG {
            background: white;
        }
        .main {
            margin-top: 15px;
            border-radius: 10px;
            height: 100vh;
            margin-bottom: -85px;
            overflow: auto;
            text-align: center;
        }
        table {
            margin-top: 4%;
        }
        .btn-info {
            width: 25%;
        }
    </style>
</head>
<body>
    <div class="whiteBG main container">
        <table class="table table-striped table-bordered table-sm">
            <tr>
                <th colspan="2"><h2>Settings</h2></th>
            </tr>
            <form asp-action="UpdateInfo" asp-controller="Home" method="post">
                <tr>
                    <td>
                        <h5>First Name</h5>
                    </td>
                    <td>
                        <span asp-validation-for="FirstName"></span>
                        <input type="text" value="@ViewBag.CurrUser.FirstName" name="FirstName" required="">
                    </td>
                </tr>
                <tr>
                    <td>
                        <h5>Last Name</h5>
                    </td>
                    <td>
                        <span asp-validation-for="LastName"></span>
                        <input type="text" value="@ViewBag.CurrUser.LastName" name="LastName" required="">
                    </td>
                </tr>
                <tr>
                    <td>
                        <h5>Email</h5>
                    </td>
                    <td>
                        <span asp-validation-for="Email"></span>
                        <input type="text" value="@ViewBag.CurrUser.Email" name="Email" required="">
                    </td>
                </tr>
                <tr>
                    <td>
                        <h5>Password</h5>
                    </td>
                    <td>
                        <a href="/settings/changepassword"><button class="btn btn-info" type="button"><i class="fas fa-user-plus"></i> Change Password</button></a>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <button class="btn btn-primary btn-block" type="submit"><i class="fas fa-user-plus"></i> Save</button>
                    </td>
                </tr>
            </form>
            <tr>
                <td colspan="2">
                    <a href="/profile"><i class="fas fa-angle-left"></i><button class="btn btn-secondary btn-block">Cancel</button></a>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>